<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:text="Simulacros Disponibles"
            android:textSize="24sp"
            android:layout_marginTop="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIngles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulacro Inglés"
            android:textSize="20dp"
            android:layout_marginTop="60dp"/>

        <Button
            android:id="@+id/btnSociales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulacro Sociales"
            android:textSize="20sp"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/btnCiencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulacro Ciencias Naturales"
            android:textSize="20dp"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/btnLectura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulacro Lectura Crítica"
            android:textSize="20dp"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
